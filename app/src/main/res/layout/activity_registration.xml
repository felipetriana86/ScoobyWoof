<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:background="@drawable/white_orange">


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/scoobypaw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textScooby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40sp"
        android:text="SCOOBY"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/imgLogo"
        app:layout_constraintLeft_toRightOf="@id/imgLogo"/>

    <TextView
        android:id="@+id/textWoof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="55dp"
        android:text="WOOF"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/imgLogo"
        app:layout_constraintLeft_toRightOf="@id/imgLogo"
        app:layout_constraintLeft_toLeftOf="@id/textScooby"/>


    <TextView
        android:id="@+id/textPaws1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="Happy Paws Always"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="@+id/imgLogo"
        app:layout_constraintLeft_toRightOf="@id/imgLogo"
        app:layout_constraintLeft_toLeftOf="@id/textScooby"/>

    <View
        android:id="@+id/lineSpace1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FF9800"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"/>


    <TextView
        android:id="@+id/lblFirstName"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20sp"

        android:text="First Name *"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/lineSpace1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/edFirstName"
        android:layout_width="175sp"
        android:layout_height="45sp"

        android:layout_marginStart="20sp"
        android:background="#2CFF9800"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/lblFirstName"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/lblLastName"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20sp"

        android:text="Last Name *"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/lineSpace1"
        app:layout_constraintLeft_toRightOf="@id/lblFirstName"/>

    <EditText
        android:id="@+id/edLastName"
        android:layout_width="175sp"
        android:layout_height="45sp"

        android:layout_marginStart="20sp"
        android:background="#2CFF9800"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/lblLastName"
        app:layout_constraintLeft_toRightOf="@id/edFirstName"/>

    <TextView
        android:id="@+id/lblEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:text="Email *"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/edFirstName"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:inputType="textEmailAddress"
        android:hint=" email@example.com"
        android:background="#2CFF9800"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/lblEmail"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/lblPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:text="Password *"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/edEmail"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:inputType="textPassword"
        android:background="#2CFF9800"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/lblPassword"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/lblConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:text="Confirm Password *"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/edPassword"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/edConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:inputType="textPassword"
        android:background="#2CFF9800"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/lblConfirmPassword"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/lblSelectProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20sp"

        android:text="Select Profile *"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/edConfirmPassword"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <RadioGroup
        android:id="@+id/rgSelectProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/lblSelectProfile"
        app:layout_constraintTop_toBottomOf="@id/lblSelectProfile"
        app:buttonTint="@color/purple_200"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rbOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner"
            android:textSize="20sp"
            android:textStyle="italic"/>

        <RadioButton
            android:id="@+id/rbWalker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walker"
            android:textSize="20sp"
            android:textStyle="italic"/>


    </RadioGroup>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:stateListAnimator="@null"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="CONFIRM REGISTRATION"
        android:textColor="#ffffff"
        android:textSize="22sp"
        app:cardCornerRadius="15dp"
        android:alpha="0.6"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@id/rgSelectProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>